<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.CalculadoraInteligente.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.CalculadoraInteligente.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ShapeAppearanceOverlay.CalculadoraInteligente.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.CalculadoraInteligente.Button.Round" parent="Widget.CalculadoraInteligente.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CalculadoraInteligente.Circle</item>
        <item name="android:minHeight">@dimen/button_diameter</item>
        <item name="android:minWidth">@dimen/button_diameter</item>
        <item name="android:layout_width">@dimen/button_diameter</item>
        <item name="android:layout_height">@dimen/button_diameter</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.CalculadoraInteligente.Button.RoundOutlined" parent="Widget.CalculadoraInteligente.Button.Outlined">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CalculadoraInteligente.Circle</item>
        <item name="android:minHeight">@dimen/button_diameter</item>
        <item name="android:minWidth">@dimen/button_diameter</item>
        <item name="android:layout_width">@dimen/button_diameter</item>
        <item name="android:layout_height">@dimen/button_diameter</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
