<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    android:padding="@dimen/margin_large">

    <!-- Display Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/displayCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_medium"
        app:cardCornerRadius="@dimen/display_corner_radius"
        app:cardElevation="@dimen/display_elevation"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/panel_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/display_padding">

            <TextView
                android:id="@+id/tvExpression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/display_subtext_size"
                android:textColor="@color/text_muted"
                android:gravity="end"
                android:alpha="0.6"
                android:minHeight="24dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/display_zero"
                android:textSize="@dimen/display_text_size"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="end"
                android:minHeight="40dp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Guideline vertical: 35% esquerda | 65% direita -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/landscapeDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <!-- Card de botões avançados (esquerda 35%) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/advancedPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        app:cardBackgroundColor="@color/panel_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="@dimen/button_elevation"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/displayCard"
        app:layout_constraintBottom_toTopOf="@id/adView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/landscapeDivider">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/advancedContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <!-- Botões avançados -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnParenOpen"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:backgroundTint="@color/btn_function"
                android:text="("
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnParenClose"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:backgroundTint="@color/btn_function"
                android:text=")"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPower"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:backgroundTint="@color/btn_function"
                android:text="@string/btn_power"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSqrt"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:backgroundTint="@color/btn_function"
                android:text="@string/btn_sqrt"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLog"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:backgroundTint="@color/btn_function"
                android:text="@string/btn_log"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSin"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:backgroundTint="@color/btn_function"
                android:text="@string/btn_sin"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCos"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:backgroundTint="@color/btn_function"
                android:text="@string/btn_cos"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTan"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:backgroundTint="@color/btn_function"
                android:text="@string/btn_tan"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPi"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:backgroundTint="@color/btn_function"
                android:text="@string/btn_pi"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnE"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:backgroundTint="@color/btn_function"
                android:text="@string/btn_e_math"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRad"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:backgroundTint="@color/btn_function"
                android:text="@string/btn_rad"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFactorial"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:backgroundTint="@color/btn_function"
                android:text="@string/btn_factorial"
                android:textColor="@color/btn_function_text" />

            <!-- Flow para organizar botões avançados em grid 3 colunas -->
            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/advancedFlow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:flow_wrapMode="aligned"
                app:flow_maxElementsWrap="3"
                app:flow_horizontalGap="4dp"
                app:flow_verticalGap="4dp"
                app:flow_horizontalStyle="spread"
                app:flow_verticalStyle="spread"
                app:constraint_referenced_ids="btnParenOpen,btnParenClose,btnPower,btnSqrt,btnLog,btnSin,btnCos,btnTan,btnPi,btnE,btnRad,btnFactorial" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card de teclado numérico (direita 65%) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/buttonsCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        app:cardBackgroundColor="@color/panel_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="@dimen/button_elevation"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/displayCard"
        app:layout_constraintBottom_toTopOf="@id/adView"
        app:layout_constraintStart_toEndOf="@id/landscapeDivider"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <!-- Botões do teclado numérico -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVoice"
                style="@style/Widget.CalculadoraInteligente.Button.RoundOutlined"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                app:strokeColor="@color/btn_voice_outline"
                app:strokeWidth="1dp"
                android:text="@string/btn_voice"
                android:backgroundTint="@color/btn_voice"
                android:textColor="@color/btn_voice_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClear"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="@string/btn_clear"
                android:backgroundTint="@color/btn_function"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="@string/btn_delete"
                android:backgroundTint="@color/btn_function"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDivide"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="@string/btn_divide"
                android:backgroundTint="@color/btn_operator"
                android:textColor="@color/btn_operator_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn7"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="7"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn8"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="8"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn9"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="9"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMultiply"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="@string/btn_multiply"
                android:backgroundTint="@color/btn_operator"
                android:textColor="@color/btn_operator_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn4"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="4"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn5"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="5"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn6"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="6"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMinus"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="@string/btn_minus"
                android:backgroundTint="@color/btn_operator"
                android:textColor="@color/btn_operator_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="1"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="2"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="3"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlus"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="@string/btn_plus"
                android:backgroundTint="@color/btn_operator"
                android:textColor="@color/btn_operator_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPercent"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="@string/btn_percent"
                android:backgroundTint="@color/btn_function"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn0"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="0"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDecimal"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="@string/btn_decimal"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEquals"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="5:2"
                android:text="@string/btn_equals"
                android:backgroundTint="@color/btn_equals"
                android:textColor="@color/btn_equals_text" />

            <!-- Flow para organizar teclado numérico em grid 4 colunas -->
            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/buttonsFlow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:flow_wrapMode="aligned"
                app:flow_maxElementsWrap="4"
                app:flow_horizontalGap="4dp"
                app:flow_verticalGap="4dp"
                app:flow_horizontalStyle="spread"
                app:flow_verticalStyle="spread"
                app:constraint_referenced_ids="btnVoice,btnClear,btnDelete,btnDivide,btn7,btn8,btn9,btnMultiply,btn4,btn5,btn6,btnMinus,btn1,btn2,btn3,btnPlus,btnPercent,btn0,btnDecimal,btnEquals" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Toggle escondido no landscape -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToggleAdvanced"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <!-- controlsContainer escondido no landscape (estrutura do portrait) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controlsContainer"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111" />

</androidx.constraintlayout.widget.ConstraintLayout>
