<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    android:padding="@dimen/margin_small">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenSettings"
        style="@style/Widget.CalculadoraInteligente.Button.Outlined"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:layout_marginEnd="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:backgroundTint="@color/btn_toggle_background"
        android:text="@string/settings_short_label"
        android:textSize="16sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:contentDescription="@string/action_open_settings"
        android:textColor="@color/btn_toggle_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/btn_toggle_outline"
        app:strokeWidth="1dp" />

    <!-- Display Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/displayCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="@dimen/margin_small"
        app:cardBackgroundColor="@color/panel_background"
        app:cardCornerRadius="@dimen/display_corner_radius"
        app:cardElevation="@dimen/display_elevation"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toTopOf="@id/controlsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnOpenSettings">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvExpression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="2"
                android:textColor="@color/text_muted"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="2"
                android:text="@string/display_zero"
                android:textColor="@color/text_primary"
                android:textSize="42sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Controls adjusted with constraints so buttons scale proportionally -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controlsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@id/displayCard"
        app:layout_constraintBottom_toTopOf="@id/adView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="@dimen/margin_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnToggleAdvanced">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVoice"
                style="@style/Widget.CalculadoraInteligente.Button.RoundOutlined"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:strokeColor="@color/btn_voice_outline"
                app:strokeWidth="1dp"
                android:text=""
                android:backgroundTint="@color/btn_voice"
                android:textColor="@color/btn_voice_text"
                android:contentDescription="@string/btn_voice"
                android:gravity="center"
                app:icon="@drawable/ic_mic_idle"
                app:iconTint="@color/btn_voice_text"
                app:iconPadding="0dp"
                app:iconSize="@dimen/voice_button_icon_size"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClear"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_clear"
                android:backgroundTint="@color/btn_function"
                android:textColor="@color/md_theme_error"
                android:textAllCaps="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_delete"
                android:backgroundTint="@color/btn_function"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDivide"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_divide"
                android:textSize="@dimen/operator_button_text_size"
                android:backgroundTint="@color/btn_operator"
                android:textColor="@color/btn_operator_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn7"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_seven"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn8"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_eight"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn9"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_nine"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMultiply"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_multiply"
                android:textSize="@dimen/operator_button_text_size"
                android:backgroundTint="@color/btn_operator"
                android:textColor="@color/btn_operator_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn4"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_four"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn5"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_five"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn6"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_six"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMinus"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_minus"
                android:textSize="@dimen/operator_button_text_size"
                android:backgroundTint="@color/btn_operator"
                android:textColor="@color/btn_operator_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_one"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_two"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_three"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlus"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_plus"
                android:textSize="@dimen/operator_button_text_size"
                android:backgroundTint="@color/btn_operator"
                android:textColor="@color/btn_operator_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPercent"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_percent"
                android:textSize="@dimen/operator_button_text_size"
                android:backgroundTint="@color/btn_function"
                android:textColor="@color/btn_function_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn0"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_zero"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDecimal"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_decimal"
                android:backgroundTint="@color/btn_number"
                android:textColor="@color/btn_number_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEquals"
                style="@style/Widget.CalculadoraInteligente.Button.Round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:text="@string/btn_equals"
                android:textSize="@dimen/operator_button_text_size"
                android:backgroundTint="@color/btn_equals"
                android:textColor="@color/btn_equals_text" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/buttonsFlow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:flow_wrapMode="aligned"
                app:flow_maxElementsWrap="4"
                app:flow_horizontalGap="6dp"
                app:flow_verticalGap="4dp"
                app:flow_horizontalStyle="spread"
                app:flow_verticalStyle="spread"
                app:constraint_referenced_ids="btnVoice,btnClear,btnDelete,btnDivide,btn7,btn8,btn9,btnMultiply,btn4,btn5,btn6,btnMinus,btn1,btn2,btn3,btnPlus,btnPercent,btn0,btnDecimal,btnEquals" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleAdvanced"
            style="@style/Widget.CalculadoraInteligente.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/advanced_toggle_show"
            android:textSize="@dimen/button_text_size"
            app:strokeColor="@color/btn_toggle_outline"
            app:strokeWidth="1dp"
            android:textColor="@color/btn_toggle_text"
            android:backgroundTint="@color/btn_toggle_background"
            app:layout_constraintTop_toBottomOf="@id/buttonsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/advancedContainer" />

        <androidx.cardview.widget.CardView
            android:id="@+id/advancedContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/display_corner_radius"
            app:cardElevation="@dimen/display_elevation"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/panel_background"
            app:layout_constraintTop_toBottomOf="@id/btnToggleAdvanced"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_default="wrap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:padding="@dimen/display_padding">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/advancedButtonsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnParenOpen"
                        style="@style/Widget.CalculadoraInteligente.Button.Round"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                        android:text="("
                        android:backgroundTint="@color/btn_function"
                        android:textColor="@color/btn_function_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnParenClose"
                        style="@style/Widget.CalculadoraInteligente.Button.Round"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                        android:text=")"
                        android:backgroundTint="@color/btn_function"
                        android:textColor="@color/btn_function_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSqrt"
                        style="@style/Widget.CalculadoraInteligente.Button.Round"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                        android:text="@string/btn_sqrt"
                        android:backgroundTint="@color/btn_function"
                        android:textColor="@color/btn_function_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPower"
                        style="@style/Widget.CalculadoraInteligente.Button.Round"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                        android:text="@string/btn_power"
                        android:backgroundTint="@color/btn_function"
                        android:textColor="@color/btn_function_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSin"
                        style="@style/Widget.CalculadoraInteligente.Button.Round"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                        android:text="@string/btn_sin"
                        android:backgroundTint="@color/btn_function"
                        android:textColor="@color/btn_function_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCos"
                        style="@style/Widget.CalculadoraInteligente.Button.Round"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                        android:text="@string/btn_cos"
                        android:textSize="@dimen/button_text_size_small"
                        android:backgroundTint="@color/btn_function"
                        android:textColor="@color/btn_function_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTan"
                        style="@style/Widget.CalculadoraInteligente.Button.Round"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                        android:text="@string/btn_tan"
                        android:backgroundTint="@color/btn_function"
                        android:textColor="@color/btn_function_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLog"
                        style="@style/Widget.CalculadoraInteligente.Button.Round"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                        android:text="@string/btn_log"
                        android:backgroundTint="@color/btn_function"
                        android:textColor="@color/btn_function_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPi"
                        style="@style/Widget.CalculadoraInteligente.Button.Round"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                        android:text="@string/btn_pi"
                        android:backgroundTint="@color/btn_function"
                        android:textColor="@color/btn_function_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnE"
                        style="@style/Widget.CalculadoraInteligente.Button.Round"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                        android:text="@string/btn_e_math"
                        android:backgroundTint="@color/btn_function"
                        android:textColor="@color/btn_function_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRad"
                        style="@style/Widget.CalculadoraInteligente.Button.Round"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                        android:text="@string/btn_rad"
                        android:backgroundTint="@color/btn_function"
                        android:textColor="@color/btn_function_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFactorial"
                        style="@style/Widget.CalculadoraInteligente.Button.Round"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                        android:text="@string/btn_factorial"
                        android:backgroundTint="@color/btn_function"
                        android:textColor="@color/btn_function_text" />

                    <androidx.constraintlayout.helper.widget.Flow
                        android:id="@+id/advancedFlow"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:flow_wrapMode="aligned"
                        app:flow_maxElementsWrap="4"
                        app:flow_horizontalGap="@dimen/margin_xsmall"
                        app:flow_verticalGap="@dimen/margin_xsmall"
                        app:flow_horizontalStyle="spread_inside"
                        app:flow_verticalStyle="packed"
                        app:constraint_referenced_ids="btnParenOpen,btnParenClose,btnSqrt,btnPower,btnSin,btnCos,btnTan,btnLog,btnPi,btnE,btnRad,btnFactorial" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111" />

</androidx.constraintlayout.widget.ConstraintLayout>
